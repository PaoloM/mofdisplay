@page
@model mofdisplay.Pages.Displays.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Display</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Display.DisplayID" />
            <div class="form-group">
                <label asp-for="Display.Title" class="control-label"></label>
                <input asp-for="Display.Title" class="form-control" />
                <span asp-validation-for="Display.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Display.StartDate" class="control-label"></label>
                <input asp-for="Display.StartDate" class="form-control" />
                <span asp-validation-for="Display.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Display.CuratorID" class="control-label"></label>
                <select asp-for="Display.CuratorID" class="form-control" asp-items="ViewBag.CuratorID"></select>
                <span asp-validation-for="Display.CuratorID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
